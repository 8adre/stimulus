{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "lib": ["dom", "es2015", "scripthost"],
    "pretty": true,
    "strictNullChecks": true,
    "inlineSourceMap": true,
    "declaration": true,
    "rootDir": "packages",
    "baseUrl": "packages",
    "outDir": "dist/modules",
    "declarationDir": "dist/types"
  },
  "include": [
    "packages/**/*.ts"
  ],
  "exclude": [
    "packages/**/dist",
    "packages/@stimulus/compiler",
    "packages/typedoc-plugin-stimulus"
  ]
}
